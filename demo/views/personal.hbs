{{!< default}}
{{#contentFor 'title'}}Profile Settings{{/contentFor}}
<!--begin::details View-->
<div class="card mb-5 mb-xl-10">
  <!--begin::Card header-->
  <div class="card-header cursor-pointer justify-content-end">
    <!--begin::Action-->
    <a href="/users/edit-personal" class="btn btn-primary align-self-center">Edit Profile</a>
    <!--end::Action-->
  </div>
  <!--end::Card header-->
  <!--begin::Card body-->
  <div class="card-body p-9">
    <!--begin::Row-->
    <div class="row mb-7">
      <!--begin::Label-->
      <label class="col-lg-4 fw-bolder text-muted">Profile image</label>
      <!--end::Label-->
      <!--begin::Col-->
      <div class="col-lg-8">
        <div class="symbol symbol-125px symbol-fixed">
          <img src="{{user.icon}}?{{formatDate 'x' user.modified}}" alt="image">
        </div>
      </div>
      <!--end::Col-->
    </div>
    <!--end::Row-->
    <!--begin::Row-->
    <div class="row mb-7">
      <!--begin::Label-->
      <label class="col-lg-4 fw-bolder text-muted">Email (login ID)</label>
      <!--end::Label-->
      <!--begin::Col-->
      <div class="col-lg-8">
        <span class="fw-bolder fs-6 text-gray-800">{{user.email}}</span>
      </div>
      <!--end::Col-->
    </div>
    <!--end::Row-->
    <!--begin::Row-->
    <div class="row mb-7">
      <!--begin::Label-->
      <label class="col-lg-4 fw-bolder text-muted">Name</label>
      <!--end::Label-->
      <!--begin::Col-->
      <div class="col-lg-8">
        <span class="fw-bolder fs-6 text-gray-800">{{user.name}}</span>
      </div>
      <!--end::Col-->
    </div>
    <!--end::Row-->
    <!--begin::Row-->
    <div class="row mb-7">
      <!--begin::Label-->
      <label class="col-lg-4 fw-bolder text-muted">Created</label>
      <!--end::Label-->
      <!--begin::Col-->
      <div class="col-lg-8">
        <span class="fw-bolder fs-6 text-gray-800">{{formatDate 'Y/M/D HH:mm:ss' user.created}}</span>
      </div>
      <!--end::Col-->
    </div>
    <!--end::Row-->
    <!--begin::Row-->
    <div class="row mb-7">
      <!--begin::Label-->
      <label class="col-lg-4 fw-bolder text-muted">Updated</label>
      <!--end::Label-->
      <!--begin::Col-->
      <div class="col-lg-8">
        <span class="fw-bolder fs-6 text-gray-800">{{formatDate 'Y/M/D HH:mm:ss' user.modified}}</span>
      </div>
      <!--end::Col-->
    </div>
    <!--end::Row-->
  </div>
  <!--end::Card body-->
</div>
<!--end::details View-->